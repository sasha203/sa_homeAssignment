@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>

        <div class="col-md-4 loginF">
            <h1>Login</h1>
            
            
            <form class="marg" method="post" action="\Accounts\Login">
                @Html.AntiForgeryToken() <!--AntiforgeryToken(Created for the user.)-->
                <div class="form-group">
                    <div class="form-group">
                        <label for="user">Username</label>
                        <input type="text" class="form-control" name="username" id="user" />
                    </div>


                    <div class="form-group">
                        <label for="pass">Password</label>
                        <input type="password" class="form-control" name="password" id="pass" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
            <br /><br />
            @Html.ActionLink("Don't have an account yet?", "Register", "Accounts")
        </div>

        <div class="col-md-4"></div>
    </div>
</div>

